@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    Layout = "NewLayout";
}

<body class="pageBG">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="d-flex justify-content-center">
        <div class="card w-50 border shadow rounded">
            <div class="row">
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div class="card-header border-bottom border-dark">
                        <h1 class="text-center fw-bold">@ViewData["Title"]</h1>
                    </div>
                    <div class="card-body">
                        <div class="col-md-6 w-100">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating">
                                <input asp-for="Input.Username" class="form-control" />
                                <label asp-for="Input.Username" class="form-label"></label>
                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.FirstName" class="form-control" />
                                <label asp-for="Input.FirstName" class="form-label"></label>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.LastName" class="form-control" />
                                <label asp-for="Input.LastName" class="form-label"></label>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3 w-100">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating">
                                <label asp-for="Input.AvatarData" style="width: 100%"></label>
                                @if (Model.Input.AvatarData != null)
                                {
                                    <img id="avatarFileData" class="img-fluid img-thumbnail rounded" style="object-fit:cover" src="data:image*;base64,@(Convert.ToBase64String(Model.Input.AvatarData))" />
                                }
                                else
                                {
                                    <img id="avatarFileData" class="img-fluid img-thumbnail rounded" style="object-fit:cover" src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png" />
                                }
                                <input type="file" asp-for="Input.AvatarFormFile" class="form-control" accept=".png, .jpg, .jpeg, .gif, .tif"
                                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                       onchange="document.getElementById('avatarFileData').src = window.URL.createObjectURL(this.files[0])" />
                                <span asp-validation-for="Input.AvatarFormFile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="col-md-6 w-100">
                                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
